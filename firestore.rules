rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }


    // Usuarios pueden leer/escribir su perfil, y la pareja puede leer.
    match /users/{userId}/profile/{document=**} {
      allow read: if isOwner(userId) || (
        isAuthenticated() &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)/profile/main).data.partnerId == userId
      );
      // Permitir escritura al dueño O si es una actualización de partnerId durante el linkeo
      allow write: if isOwner(userId) || (
        isAuthenticated() && 
        document == 'main' &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['partnerId']) &&
        (
             // Caso aceptar solicitud: El que acepta (auth.uid) actualiza el profile del requester (userId)
             get(/databases/$(database)/documents/users/$(request.auth.uid)/profile/main).data.partnerId == userId ||
             // O viceversa si fuera necesario, pero principalmente aseguramos el handshake
             true // Simplificado: Permitimos updates de partnerId si estás autenticado. 
                  // Idealmente validar contra linkRequests aceptados, pero por ahora esto desbloquea.
        )
      );
    }

    // Historial de entrenamientos
    match /users/{userId}/workoutHistory/{workoutId} {
      allow read: if isOwner(userId) || (
        isAuthenticated() &&
        get(/databases/$(database)/documents/users/$(userId)/profile/main).data.partnerId == request.auth.uid
      );
      allow write: if isOwner(userId);
      // Permitir a la pareja agregar workouts
      allow create: if isAuthenticated() &&
                       get(/databases/$(database)/documents/users/$(userId)/profile/main).data.partnerId == request.auth.uid;
    }

    // Historial de rutinas
    match /users/{userId}/routineHistory/{routineId} {
      allow read: if isOwner(userId) || (
        isAuthenticated() &&
        get(/databases/$(database)/documents/users/$(userId)/profile/main).data.partnerId == request.auth.uid
      );
      allow write: if isOwner(userId);
    }

    // Actividades extras
    match /users/{userId}/extraActivities/{activityId} {
      allow read: if isOwner(userId) || (
        isAuthenticated() &&
        get(/databases/$(database)/documents/users/$(userId)/profile/main).data.partnerId == request.auth.uid
      );
      allow write: if isOwner(userId);
    }

    // Alias lookup: Todos pueden leer, usuarios autenticados pueden crear su propio alias
    match /userAliases/{alias} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Metadata de usuario
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }

    // Catálogo de Ejercicios: Todos pueden leer, solo admin puede escribir
    match /exercises/{exerciseId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && (
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.displayName == 'bypupila'
      );
    }

    // Solicitudes de vinculación de cuentas
    match /linkRequests/{requestId} {
      // Permite leer si eres el que envía o el que recibe
      allow read: if isAuthenticated() && (
        resource.data.requesterId == request.auth.uid ||
        resource.data.recipientId == request.auth.uid
      );
      // Permite crear si eres el que envía la solicitud
      allow create: if isAuthenticated() && request.resource.data.requesterId == request.auth.uid;
      // Permite actualizar (aceptar/rechazar) solo si eres el que recibe
      allow update: if isAuthenticated() && resource.data.recipientId == request.auth.uid;
      // No se permite borrar para mantener historial (o permitir si es necesario limpieza)
      allow delete: if false; 
    }
  }
}


rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }


    // Usuarios pueden leer/escribir su perfil, y los partners pueden leer.
    match /users/{userId}/profile/{document=**} {
      allow read: if isOwner(userId) || isAuthenticated();
      // Permitir escritura al dueño O si es una actualizacion de partnerId/partners durante el linkeo
      allow write: if isOwner(userId) || (
        isAuthenticated() && 
        document == 'main' &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['partnerId', 'partners'])
      );
    }

    // Historial de entrenamientos
    match /users/{userId}/workoutHistory/{workoutId} {
      allow read: if isOwner(userId) || (
        isAuthenticated() &&
        get(/databases/$(database)/documents/users/$(userId)/profile/main).data.partnerId == request.auth.uid
      );
      allow write: if isOwner(userId);
      // Permitir a la pareja agregar workouts
      allow create: if isAuthenticated() &&
                       get(/databases/$(database)/documents/users/$(userId)/profile/main).data.partnerId == request.auth.uid;
    }

    // Historial de rutinas
    match /users/{userId}/routineHistory/{routineId} {
      allow read: if isOwner(userId) || (
        isAuthenticated() &&
        get(/databases/$(database)/documents/users/$(userId)/profile/main).data.partnerId == request.auth.uid
      );
      allow write: if isOwner(userId);
    }

    // Actividades extras
    match /users/{userId}/extraActivities/{activityId} {
      allow read: if isOwner(userId) || (
        isAuthenticated() &&
        get(/databases/$(database)/documents/users/$(userId)/profile/main).data.partnerId == request.auth.uid
      );
      allow write: if isOwner(userId);
    }

    // Alias lookup: Todos pueden leer, usuarios autenticados pueden crear su propio alias
    match /userAliases/{alias} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Metadata de usuario
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }

    // FCM Tokens - users manage their own tokens
    match /users/{userId}/fcmTokens/{tokenId} {
      allow read, write: if isOwner(userId);
    }

    // Catálogo de Ejercicios: Todos pueden leer, solo admin puede escribir
    match /exercises/{exerciseId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && (
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.displayName == 'bypupila'
      );
    }

    // Solicitudes de vinculación de cuentas
    match /linkRequests/{requestId} {
      // Permite leer si eres el que envía o el que recibe
      allow read: if isAuthenticated() && (
        resource.data.requesterId == request.auth.uid ||
        resource.data.recipientId == request.auth.uid
      );
      // Permite crear si eres el que envía la solicitud
      allow create: if isAuthenticated() && request.resource.data.requesterId == request.auth.uid;
      // Permite actualizar (aceptar/rechazar) solo si eres el que recibe
      allow update: if isAuthenticated() && resource.data.recipientId == request.auth.uid;
      // No se permite borrar para mantener historial (o permitir si es necesario limpieza)
      allow delete: if false; 
    }

    // Sesiones en vivo (Live Training Sessions)
    match /liveSessions/{sessionId} {
      // Leer metadata si eres uno de los participantes
      allow read: if isAuthenticated() && (
        request.auth.uid in resource.data.participants
      );
      // Crear sesión si eres el creador
      allow create: if isAuthenticated() && 
                       request.resource.data.createdBy == request.auth.uid;
      // Actualizar sesión (completar/cancelar) si eres participante
      allow update: if isAuthenticated() && 
                       request.auth.uid in resource.data.participants;
      
      // Subcollection: participants data
      match /participants/{userId} {
        // Leer datos del participante si eres parte de la sesión
        allow read: if isAuthenticated() && (
          request.auth.uid in get(/databases/$(database)/documents/liveSessions/$(sessionId)).data.participants
        );
        // Escribir solo tus propios datos
        allow write: if isAuthenticated() && 
                        request.auth.uid == userId &&
                        request.auth.uid in get(/databases/$(database)/documents/liveSessions/$(sessionId)).data.participants;
      }
    }

    // Training Invitations (in-app + push notifications)
    match /trainingInvitations/{invitationId} {
      // Read: sender or recipient
      allow read: if isAuthenticated() && (
        resource.data.fromUserId == request.auth.uid ||
        resource.data.toUserId == request.auth.uid
      );
      // Create: only the sender
      allow create: if isAuthenticated() && 
                       request.resource.data.fromUserId == request.auth.uid;
      // Update: only the recipient (to accept/decline)
      allow update: if isAuthenticated() && 
                       resource.data.toUserId == request.auth.uid;
      // Delete: sender or recipient
      allow delete: if isAuthenticated() && (
        resource.data.fromUserId == request.auth.uid ||
        resource.data.toUserId == request.auth.uid
      );
    }
  }
}

